# Database (Railway provides this automatically when you add PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# Server
PORT=3001
NODE_ENV=development

# Pinata IPFS
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# API key for frontend-to-backend calls
API_SECRET=change-this-secret-key

# Admin wallet addresses (comma-separated, checksummed)
ADMIN_WALLETS=0xYourAdminWallet1,0xYourAdminWallet2

# Session secret for admin auth tokens
SESSION_SECRET=change-this-random-string

# Thirdweb server wallet (for minting via Engine)
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key
SERVER_WALLET_ADDRESS=0xYourServerWalletAddress

# RPC URLs (used by adminAuth.js for ERC-1271 verification)
POLYGON_RPC_URL=https://polygon-rpc.com/

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002
